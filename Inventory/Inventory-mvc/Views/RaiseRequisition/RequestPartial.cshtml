@model Inventory_mvc.ViewModel.RaiseRequisitionViewModel

@{ 
    Layout = null;
}


    @using (Ajax.BeginForm("AddNewRequest", null, new AjaxOptions { HttpMethod = "Post", OnSuccess = "reLoad" }, new { @class = "form-horizontal" }))
    {


        
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h3>Add Stationery Request</h3>
        </div>

        <div class="modal-body">
            <div class="control-group">
                @Html.HiddenFor(model => model.ItemCode)
                @Html.LabelFor(model => model.Description, new { @class = "control-label" })
                <div class="controls">
                    @Html.EditorFor(model => model.Description, new { @readonly = "readonly" })
                    @Html.ValidationMessageFor(model => model.ItemCode)
                </div>
            </div>

            <div class="control-group">
                @Html.LabelFor(model => model.Description, new { @class = "control-label" })
                <div class="controls">
                    @Html.LabelFor(model => model.UOM)
                </div>
            </div>

            <div class="control-group">
                @Html.LabelFor(model => model.Quantity, new { @class = "control-label" })
                <div class="controls">
                    @Html.EditorFor(model => model.Quantity)
                    @Html.ValidationMessageFor(model => model.Quantity)
                </div>
            </div>

        </div>

        <div class="modal-footer">
            <a href="#" class="btn" data-dismiss="modal">Close</a>
            <input type="submit" class="btn btn-primary" value="Save" />
        </div>
            
    }
