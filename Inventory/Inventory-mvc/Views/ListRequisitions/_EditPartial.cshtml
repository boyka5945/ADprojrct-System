
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/css/bootstrap.min.css">
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/js/bootstrap.min.js"></script>

@model Inventory_mvc.ViewModel.RequisitionDetailViewModel


@using (Html.BeginForm("EditRecord", "ListRequisitions", FormMethod.Post, new { @class = "form", id = "requestForm" }))
{
    <div class="modal-header">
        <h5 class="modal-title">Edit Stationery Request</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>

    <div class="modal-body">
        @Html.HiddenFor(model => model.Item.itemCode)
        @Html.HiddenFor(model => model.Record.requisitionNo)

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.Label("Stationery")
            <input class="form-control" type="text" value="@Model.Item.description" readonly />
        </div>
        
        <div class="form-group">
            @Html.Label("Request Quantity")
            @Html.EditorFor(model => model.RequestQty, new { htmlAttributes = new { @class = "form-control", id = "qty", value = "1", min = "1" } })
            @Html.ValidationMessageFor(model => model.RequestQty, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="modal-footer">
        <input type="submit" value="Save Change" class="btn btn-primary" />
        <input type="button" value="Cancel" class="btn btn-secondary" data-dismiss="modal" />
    </div>
}
